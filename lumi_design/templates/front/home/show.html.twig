{% extends "front/base.html.twig" %}

{% block title %}
	{{parent()}}Details
{% endblock %}

{% block body %}
	<main class="container border rounded my-5 py-3">
		{% if product is not null %}
			{# <pre>
    {{ dump(product) }}
</pre> #}
			<div>
			<img src={{product.image starts with 'http' ? product.image : asset('img/products/' ~ product.image) }} alt="image de {{product.name}}">
				<h1>{{product.name}}</h1>
				<p>{{product.description}}</p>
				<p>Prix: ${{product.price}}</p>
				<p>Category:
					{{product.category.name ? product.category.name : ''}}</p>
				{# equals to #}
				<p>Category:
					{{ product.category.name ?? 'N/A'}}</p>
			</div>

		{% endif %}


	</main>

{% endblock %}
