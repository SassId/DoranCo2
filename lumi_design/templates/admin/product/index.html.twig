{% extends "admin/base.html.twig" %}

{% block title %}
	{{parent()}}Admin - Product
{% endblock %}

{% block body %}
	<main class="d-flex flex-column justify-content-center gap-5">
		{# <pre>
            {{ dump(products) }}
        </pre> #}
		<h1 class="text-center">Gérer les Produits</h1>
		<a class="btn btn-success m-auto" href="">Ajouter un Produit</a>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Date de Création</th>
				</tr>
			</thead>
			<tbody>
				{% for p in products %}
					<tr>
						<td>{{p.id}}</td>
						<td>{{p.name}}</td>
						<td>{{p.createdAt|date('d/m/y')}}</td>
						<td>
							<a class="btn btn-warning" href="">Modifier</a>
						</td>
						<td>
							<a class="btn btn-danger" href="">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation mt-4">
			{{ knp_pagination_render(products) }}
		</div>
	</main>
{% endblock %}
